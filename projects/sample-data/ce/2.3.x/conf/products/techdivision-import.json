{
  "magento-edition": "CE",
  "magento-version": "2.3.0",
  "operation-name" : "add-update",
  "archive-artefacts" : true,
  "debug-mode" : false,
  "source-dir" : "projects/sample-data/tmp",
  "target-dir" : "projects/sample-data/tmp",
  "entity-type-code" : "catalog_product",
  "listeners" : [
    {
      "app.set.up" : [
        "import.listener.render.ansi.art",
        "import.listener.initialize.registry"
      ]
    },
    {
      "app.tear.down" : [
        "import.listener.clear.registry"
      ]
    }
  ],
  "databases" : [
    {
      "id": "docker",
      "default" : true,
      "pdo-dsn": "mysql:host=127.0.1.4:9306;dbname=magento;charset=utf8",
      "username": "magento",
      "password": "magento"
    }
  ],
  "loggers": [
    {
      "name": "system",
      "channel-name": "logger/system",
      "type": "Monolog\\Logger",
      "handlers": [
        {
          "type": "Monolog\\Handler\\ErrorLogHandler",
          "formatter": {
            "type": "Monolog\\Formatter\\LineFormatter",
            "params" : [
              {
                "format": "[%datetime%] %channel%.%level_name%: %message% %context% %extra%",
                "date-format": "Y-m-d H:i:s",
                "allow-inline-line-breaks": true,
                "ignore-empty-context-and-extra": false
              }
            ]
          }
        }
      ]
    },
    {
      "name": "mail",
      "channel-name" : "logger/mail",
      "type" : "Monolog\\Logger",
      "handlers" : [
        {
          "type": "Monolog\\Handler\\SwiftMailerHandler",
          "params" : [
            {
              "log-level" : "error",
              "bubble" : false
            }
          ],
          "swift-mailer" : {
            "factory" : "TechDivision\\Import\\Utils\\SwiftMailer\\SendmailTransportMailerFactory",
            "mailer-factory" : "\\Swift_Mailer",
            "params" : [
              {
                "to" : "m2if@techdivision.com",
                "from" : "m2if@techdivision.com",
                "subject": "Importer Error",
                "content-type" : "text/plain"
              }
            ],
            "transport" : {
              "transport-factory" : "\\Swift_SendmailTransport"
            }
          }
        }
      ]
    }
  ],
  "operations" : [
    {
      "name" : "delete",
      "plugins" : [
        {
          "id": "import.plugin.global.data"
        },
        {
          "id": "import.plugin.subject",
          "subjects" : [
            {
              "id": "import.subject.move.files",
              "identifier": "move-files",
              "file-resolver": {
                "prefix": "product-import"
              },
              "ok-file-needed": true
            },
            {
              "id": "import_product.subject.bunch",
              "identifier": "files",
              "file-resolver": {
                "prefix": "product-import"
              },
              "observers": [
                {
                  "import": [
                    "import_product.observer.composite.base.delete"
                  ]
                }
              ]
            }
          ]
        },
        {
          "id": "import.plugin.archive"
        }
      ]
    },
    {
      "name" : "replace",
      "plugins" : [
        {
          "id": "import.plugin.cache.warmer"
        },
        {
          "id": "import.plugin.global.data"
        },
        {
          "id": "import.plugin.subject",
          "subjects": [
            {
              "id": "import.subject.move.files",
              "identifier": "move-files",
              "file-resolver": {
                "prefix": "product-import"
              },
              "ok-file-needed": true
            },
            {
              "id": "import_product.subject.bunch",
              "identifier": "files",
              "file-resolver": {
                "prefix": "product-import"
              },
              "filesystem-adapter" : {
                "id" : "import.adapter.filesystem.factory.league",
                "adapter" : {
                  "type" : "League\\Flysystem\\Adapter\\Local"
                }
              },
              "params" : [
                {
                  "copy-images" : true,
                  "media-directory" : "projects/sample-data/tmp",
                  "images-file-directory" : "projects/sample-data/magento2-sample-data/pub/media/catalog/product"
                }
              ],
              "observers": [
                {
                  "import": [
                    "import_product.observer.composite.base.replace"
                  ]
                }
              ]
            },
            {
              "id": "import_product_variant.subject.variant",
              "file-resolver": {
                "prefix": "variants"
              },
              "observers": [
                {
                  "import": [
                    "import_product.observer.composite.variant.replace"
                  ]
                }
              ]
            },
            {
              "id": "import_product_bundle.subject.bundle",
              "file-resolver": {
                "prefix": "bundles"
              },
              "observers": [
                {
                  "import": [
                    "import_product.observer.composite.bundle.replace"
                  ]
                }
              ]
            },
            {
              "id": "import_product_grouped.subject.grouped",
              "file-resolver": {
                "prefix": "grouped"
              },
              "observers": [
                {
                  "import": [
                    "import_product_grouped.observer.grouped.product.relation"
                  ]
                }
              ]
            },
            {
              "id": "import_product_media.subject.media",
              "file-resolver": {
                "prefix": "media"
              },
              "observers": [
                {
                  "import": [
                    "import_product.observer.composite.media.replace"
                  ]
                }
              ]
            },
            {
              "id": "import_product_link.subject.link",
              "file-resolver": {
                "prefix": "links"
              },
              "observers": [
                {
                  "import": [
                    "import_product.observer.composite.link.replace"
                  ]
                }
              ]
            },
            {
              "id": "import_product_url_rewrite.subject.url.rewrite",
              "file-resolver": {
                "prefix": "url-rewrite"
              },
              "observers": [
                {
                  "import": [
                    "import_product_url_rewrite.observer.url.rewrite"
                  ]
                }
              ]
            }
          ]
        },
        {
          "id": "import.plugin.archive"
        }
      ]
    },
    {
      "name" : "add-update",
      "plugins" : [
        {
          "id": "import.plugin.cache.warmer",
          "params" : [
            {
              "cache-warmers" : [
                "import_product.repository.cache.warmer.product"
              ]
            }
          ]
        },
        {
          "id": "import.plugin.global.data"
        },
        {
          "id": "import.plugin.subject",
          "subjects": [
            {
              "id": "import.subject.move.files",
              "identifier": "move-files",
              "file-resolver": {
                "prefix": "product-import"
              },
              "ok-file-needed": true
            },
            {
              "id": "import_product.subject.bunch",
              "identifier": "files",
              "file-resolver": {
                "prefix": "product-import"
              },
              "filesystem-adapter" : {
                "id" : "import.adapter.filesystem.factory.league",
                "adapter" : {
                  "type" : "League\\Flysystem\\Adapter\\Local"
                }
              },
              "params" : [
                {
                  "copy-images" : true,
                  "clean-up-media-gallery" : true,
                  "clean-up-category-product-relations" : true,
                  "clean-up-empty-columns" : [ "base_image", "small_image", "swatch_image", "thumbnail_image" ],
                  "media-directory" : "projects/sample-data/tmp",
                  "images-file-directory" : "projects/sample-data/magento2-sample-data/pub/media/catalog/product"
                }
              ],
              "observers": [
                {
                  "import": [
                    "import_product.observer.composite.base.add_update"
                  ]
                }
              ]
            },
            {
              "id": "import_product_variant.subject.variant",
              "file-resolver": {
                "prefix": "variants"
              },
              "observers": [
                {
                  "import": [
                    "import_product.observer.composite.variant.add_update"
                  ]
                }
              ]
            },
            {
              "id": "import_product_bundle.subject.bundle",
              "file-resolver": {
                "prefix": "bundles"
              },
              "observers": [
                {
                  "import": [
                    "import_product.observer.composite.bundle.add_update"
                  ]
                }
              ]
            },
            {
              "id": "import_product_grouped.subject.grouped",
              "file-resolver": {
                "prefix": "grouped"
              },
              "observers": [
                {
                  "import": [
                    "import_product_grouped.observer.grouped.product.relation.update"
                  ]
                }
              ]
            },
            {
              "id": "import_product_media.subject.media",
              "file-resolver": {
                "prefix": "media"
              },
              "observers": [
                {
                  "import": [
                    "import_product.observer.composite.media.add_update"
                  ]
                }
              ]
            },
            {
              "id": "import_product_link.subject.link",
              "file-resolver": {
                "prefix": "links"
              },
              "observers": [
                {
                  "import": [
                    "import_product.observer.composite.link.add_update"
                  ]
                }
              ]
            },
            {
              "id": "import_product_url_rewrite.subject.url.rewrite",
              "file-resolver": {
                "prefix": "url-rewrite"
              },
              "observers": [
                {
                  "import": [
                    "import_product_url_rewrite.observer.url.rewrite.update"
                  ]
                }
              ]
            }
          ]
        },
        {
          "id": "import.plugin.missing.option.values",
          "swift-mailer" : {
            "factory" : "TechDivision\\Import\\Utils\\SwiftMailer\\SendmailTransportMailerFactory",
            "mailer-factory" : "\\Swift_Mailer",
            "params" : [
              {
                "to" : "m2if@techdivision.com",
                "from" : "m2if@techdivision.com",
                "subject": "Missing Option Values",
                "content-type" : "text/plain"
              }
            ],
            "transport" : {
              "transport-factory" : "\\Swift_SendmailTransport"
            }
          }
        },
        {
          "id": "import.plugin.archive"
        }
      ]
    }
  ]
}