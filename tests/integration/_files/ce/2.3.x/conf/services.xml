<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="output" class="Symfony\Component\Console\Output\NullOutput"/>
        <service id="import.logger.handler.null" class="Monolog\Handler\NullHandler"/>

        <service id="connection" class="TechDivision\Import\Cli\Connection\PDOConnectionWrapper">
            <factory class="TechDivision\Import\Cli\Connection\TestConnectionFactory" method="createConnection"/>
            <argument type="service" id="configuration"/>
        </service>

    </services>

</container>